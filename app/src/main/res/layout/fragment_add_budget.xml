<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/add_budget_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add budget"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/add_budget_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginHorizontal="100dp"
        android:layout_centerHorizontal="true"
        android:hint="enter budget"
        android:layout_below="@+id/add_budget_label"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/add_budget_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/add_budget_edit_text"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentStart="true"/>


    <Button
        android:id="@+id/add_budget_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/add_budget_edit_text"

        android:layout_alignParentEnd="true"/>

</RelativeLayout>